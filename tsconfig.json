{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "outDir": "lib",
    "lib": [
      "esnext",
      "dom"
    ],
    "declaration": true,
    "target": "es6",
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}
